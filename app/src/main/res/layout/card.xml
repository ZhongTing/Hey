<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="70dp"
    android:background="#2f6699">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/camera_green"
                android:gravity="center"
                android:text="北科怪鳥"
                android:textSize="50dp" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="1"
                    android:background="@color/preview_yellow"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circle_loading" />

                <!--<ImageView-->
                    <!--android:id="@+id/image"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:alpha="1"-->
                    <!--android:background="@color/preview_yellow"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/odd_bird" />-->

                <!--<com.cesards.cropimageview.CropImageView xmlns:custom="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:alpha="1"-->
                <!--android:background="@color/preview_yellow"-->
                <!--android:src="@drawable/odd_bird"-->
                <!--custom:crop="centerLeft" />-->

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:alpha="0.5"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text="一動也不動的站著"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/timestampTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.5"
                    android:background="#ffffff"
                    android:text="一天前" />


                <ImageView
                    android:id="@+id/incognito"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lock"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/place_layout"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:alpha="0.5"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingRight="10dp"
                        android:text="在生態池附近"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/like_layout">

                    <ImageView
                        android:id="@+id/watch_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/watch_like" />

                    <TextView
                        android:id="@+id/people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="10"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentRight="true">-->

                <!--<ImageView-->
                <!--android:id="@+id/watch_like"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:src="@drawable/watch_like"/>-->

                <!--<TextView-->
                <!--android:id="@+id/people"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:text="10"-->
                <!--android:textSize="14sp"/>-->
                <!--</LinearLayout>-->
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/like_image_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/frame"
            android:layout_alignStart="@+id/frame"
            android:layout_margin="20dp"
            android:rotation="-30"
            android:src="@drawable/like" />

        <ImageView
            android:id="@+id/soso_image_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/frame"
            android:layout_alignRight="@id/frame"
            android:layout_margin="20dp"
            android:rotation="30"
            android:src="@drawable/soso" />
    </RelativeLayout>
</FrameLayout>