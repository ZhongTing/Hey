<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/grey"
        android:alpha="0.5"></FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/card_frame"
            android:gravity="center_horizontal"
            android:alpha="1"></RelativeLayout>

        <!--</RelativeLayout>-->

        <!--<RelativeLayout-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:gravity="center"-->
        <!--android:alpha="1">-->

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/locationButton"
                android:background="#00000000"
                android:src="@drawable/location"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"/>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/cancelButton"
                android:background="#00000000"
                android:src="@drawable/post_no"
                android:layout_toRightOf="@id/locationButton"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:layout_alignBottom="@id/card_frame" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/raiseButton"
                android:src="@drawable/post_yes"
                android:background="#00000000"
                android:layout_toRightOf="@id/cancelButton"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:layout_alignBottom="@id/card_frame"/>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cameraButton"
                android:src="@drawable/post_camera"
                android:background="#00000000"
                android:layout_toRightOf="@id/raiseButton"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:layout_alignBottom="@id/card_frame"/>
    </RelativeLayout>
</RelativeLayout>